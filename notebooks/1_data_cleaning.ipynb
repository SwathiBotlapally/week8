import pandas as pd

# Load datasets
house_df = pd.read_csv("../data/house_prices.csv")
churn_df = pd.read_csv("../data/customer_churn.csv")
sales_df = pd.read_csv("../data/sales_data.csv")

# ---------------------------
# House Prices Cleaning
# ---------------------------
house_df.drop_duplicates(inplace=True)
house_df.fillna(house_df.median(numeric_only=True), inplace=True)

# ---------------------------
# Customer Churn Cleaning
# ---------------------------
churn_df.drop_duplicates(inplace=True)
churn_df.fillna(method="ffill", inplace=True)

# Convert Yes/No to binary
churn_df.replace({"Yes":1, "No":0}, inplace=True)

# ---------------------------
# Sales Data Cleaning
# ---------------------------
sales_df.drop_duplicates(inplace=True)
sales_df.fillna(method="ffill", inplace=True)

# Revenue calculation
sales_df["Revenue"] = sales_df["Price"] * sales_df["Quantity"]

